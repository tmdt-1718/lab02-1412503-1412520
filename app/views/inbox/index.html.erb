<div class="tab-pane active text-style table-responsive " id="tab1">
	 	<div class="mailbox-border">
	               <div class="mail-toolbar clearfix">
				    <div class="float-left">
				        <div class="btn btn_1 btn-default mrg5R">
				           <i class="fa fa-refresh"> </i>
				        </div>
				        <div class="clearfix"> </div>
				    </div>
				    <div class="float-right">
	                       <div class="clearfix"> </div>
	                 </div>
	               </div>
	      <table class=" table tab-border hover" id="inboxTable" cellspacing="0" width="100%">
	    	<thead>
	    		<tr>
	                <th>Sender</th>
	                <th>Content</th>
	                <th>Time</th>
            	</tr>
	    	</thead>
	        <tbody>
	        <% @messages.each do |message| %>
	        	<% if message.isOfFriend %>
		        	<% if message.isRead == true %>
			        	<%= content_tag :tr, class: "table-row", data: {toggle: "modal", target: "#myModal", backdrop: "false", id: message.id} do %>
			                <td>
			                	<%= message.message.sender.email %>
			                </td>
			                <td>
			                    <%= message.message.content %>
			                </td>
			                <td>
			                    <%= message.message.senttime %>
			                </td>		        	
						<% end %>
		        	<% else %>
			        	<%= content_tag :tr, class: "table-row highlight", data: {toggle: "modal", target: "#myModal", backdrop: "false", id: message.id} do %>
			                <td>
			                	<%= message.message.sender.email %>
			                </td>
			                <td>
			                    <%= message.message.content %>
			                </td>
			                <td>
			                    <%= message.message.senttime %>
			                </td>		        	
						<% end %>
		            <% end %>
	        	<% end %>

	        <% end %>
	        </tbody>
	    </table>
		</div>





	</div>

	<div id="myModal" class="modal hide fade" aria-hidden="true" tabindex="-1" >
    	<div class = "modal-dialog">
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal">&times;</button>
	          <h4 class="modal-title">Modal Header</h4>
	        </div>
	        <div class="modal-body">
	        	<div class="container-fluid">
	        	<div class = "row">
	        		<div class="col-md-2">
	        			<b>From: </b>
	        		</div>
	        		<div class="col-md-8" id="mSender">
	        			
	        		</div>
	        	</div>
	          	<div class = "row">
	        		<div class="col-md-2">
	        			<b>Content: </b>
	        		</div>
	        		<div class="col-md-8" id="mBody">
	        			
	        		</div>
	        	</div>
	        	</div>
	        	
	        </div>
	        <div class="modal-footer">
	          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        </div>
	      </div>
		</div>
  	</div>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'inbox' %>
<% end %>
 

