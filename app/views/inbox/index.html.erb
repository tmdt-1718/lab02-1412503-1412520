<div class="tab-pane active text-style table-responsive " id="tab1">
	 	<div class="mailbox-border">
	               <div class="mail-toolbar clearfix">
				    <div class="float-left">
				        <div class="btn btn_1 btn-default mrg5R">
				           <i class="fa fa-refresh"> </i>
				        </div>
				        <div class="clearfix"> </div>
				    </div>
				    <div class="float-right">
	                       <div class="clearfix"> </div>
	                 </div>
	               </div>
		</div>

	    <table class=" table tab-border hover" id="inboxTable" cellspacing="0" width="100%">
	    	<thead>
	    		<tr>
	                <th>Sender</th>
	                <th>Content</th>
	                <th>Time</th>
            	</tr>
	    	</thead>
	        <tbody>
	        <% @messages.each do |message| %>
	        	<% if message.isRead == true %>
	        		 <tr class="table-row">
		                <td>
		                	<%= message.message.sender.email %>
		                </td>
		                <td>
		                    <%= message.message.content %>
		                </td>
		                <td>
		                    <%= message.message.senttime %>
		                </td>
		            </tr>
	        	<% else %>
				 <tr class="table-row highlight">
		                <td>
		                	<%= message.message.sender.email %>
		                </td>
		                <td>
		                    <%= message.message.content %>
		                </td>
		                <td>
		                    <%= message.message.senttime %>
		                </td>
	            </tr>
	            <% end %>
	        <% end %>
	        </tbody>
	    </table>




	</div>

	<div id="myModal" class="modal">
    <!-- Modal content -->
		<div class="modal-content">
		   <div class="modal-header">
		        <span class="close">&times;</span>
		        <h4 id ='recipent' ></h2>
		      </div>
		      <div class="modal-body">
		        <p id = 'content'></p>
		      </div>
		      <div class="modal-footer">
		        <h4 id = 'senttime'></h3>
		      </div>
		      <div class="modal-footer">
		        <h4 id = 'readtime'></h3>
		      </div>
		 </div>
  	</div>